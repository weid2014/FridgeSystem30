<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="578px"
            android:layout_height="72px"
            android:layout_margin="24px"
            android:background="@drawable/app_shape_white_radius_9">

            <EditText
                android:id="@+id/tv_DrugName"
                android:layout_width="172px"
                android:layout_height="72px"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:hint="请输入User ID或用户名"
                android:layout_marginLeft="24px"
                android:textColor="@color/app_color_646464"
                android:textSize="16px" />


            <ImageView
                android:id="@+id/tv_DrugNumber"
                android:layout_width="32dp"
                android:layout_marginEnd="24px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_search" />

        </RelativeLayout>



            <RelativeLayout
                android:id="@+id/btn_new_account"
                android:layout_width="240px"
                android:layout_height="72px"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="24px"
                android:layout_marginTop="24px"
                android:background="@drawable/btn_shape_blue_radius_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableEnd="@mipmap/ic_create"
                    android:gravity="center"
                    android:text="新建账号"
                    android:textColor="@color/app_white"
                    android:textSize="24px" />

            </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:background="#00D3CF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名"
            android:textColor="@color/app_color_646464"
            android:textSize="16px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户名"
            android:textColor="@color/app_color_646464"
            android:textSize="16px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="User ID"
            android:textColor="@color/app_color_646464"
            android:textSize="16px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="账号类型"
            android:textColor="@color/app_color_646464"
            android:textSize="16px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="NFC"
            android:textColor="@color/app_color_646464"
            android:textSize="16px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="药存次数"
            android:textColor="@color/app_color_646464"
            android:textSize="16px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取药次数"
            android:textColor="@color/app_color_646464"
            android:textSize="16px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="暂存次数"
            android:textColor="@color/app_color_646464"
            android:textSize="16px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="操作"
            android:textColor="@color/app_color_646464"
            android:textSize="16px" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:background="#00D3CF" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Content_setting_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_white" />

</LinearLayout>