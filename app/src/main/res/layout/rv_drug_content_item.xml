<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/ll_drug_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_DrugNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="商品编号"
        android:textColor="@color/app_color_646464"
        android:textSize="16dp" />

    <TextView
        android:layout_margin="2dp"
        android:id="@+id/tv_DrugName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:text="商品名称"
        android:textColor="@color/app_color_646464"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_DrugSpec"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/drug_spec"
        android:textColor="@color/app_color_646464"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_DrugFactory"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:text="生产厂家"
        android:textColor="@color/app_color_646464"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_DrugUnit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text="单位"
        android:textColor="@color/app_color_646464"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_Number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text="数量"
        android:textColor="@color/app_color_646464"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_DrugMargin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text="试剂余量"
        android:textColor="@color/app_color_btn"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_BatchNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text="批号"
        android:textColor="@color/app_color_646464"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_ValidityDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="有效期"
        android:textColor="@color/app_color_646464"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_ValidityStatus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="效期状态"
        android:textColor="@color/app_color_646464"
        android:textSize="16dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_cell_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1层左"
        android:textColor="@color/app_color_btn"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_ItemCode"
                android:layout_width="96px"
                android:layout_height="42px"
                android:layout_marginEnd="4dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_shape_radius_5"
                android:gravity="center"
                android:text="单品码"
                android:textColor="@color/app_white"
                android:textSize="14px" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_edit_cell_number"
                android:layout_width="96px"
                android:layout_height="42px"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_shape_radius_5"
                android:text="编辑位置"
                android:textColor="@color/app_white"
                android:textSize="14px" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>