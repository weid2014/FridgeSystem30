<?xml version="1.0" encoding="utf-8"?>

<!-- 冰箱操作按钮布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="144dp"
    android:layout_marginTop="48dp"
    android:layout_marginEnd="144dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                android:id="@+id/include_title_sncode_step2"
                layout="@layout/layout_spash_item_title" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:background="@drawable/app_shape_white_radius_9">

                <TextView
                    android:id="@+id/tv_sncode"
                    style="@style/CustomTextViewStyle"
                    android:text="@string/sncode" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:layout_marginStart="60dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                android:id="@+id/include_title_token_step2"
                layout="@layout/layout_spash_item_title" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:background="@drawable/app_shape_white_radius_9">

                <TextView
                    android:id="@+id/tv_activation_token"
                    style="@style/CustomTextViewStyle"
                    android:text="@string/admin_password" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                android:id="@+id/include_title_alias_step2"
                layout="@layout/layout_spash_item_title" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:background="@drawable/app_shape_white_radius_9">

                <TextView
                    android:id="@+id/tv_device_alias"
                    style="@style/CustomTextViewStyle"
                    android:text="测试别名" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <include
                android:id="@+id/include_title_location_step2"
                layout="@layout/layout_spash_item_title" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:background="@drawable/app_shape_white_radius_9">

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/CustomTextViewStyle"
                    android:text="广州中心" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <include
            android:id="@+id/include_title_http_step2"
            layout="@layout/layout_spash_item_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:background="@drawable/app_shape_white_radius_9">

            <TextView
                android:id="@+id/ed_url"
                style="@style/CustomTextViewStyle"
                android:text="@string/url_km" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <include
            android:id="@+id/include_title_password_step2"
            layout="@layout/layout_spash_item_title" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:background="@drawable/app_shape_white_radius_9">

            <EditText
                android:id="@+id/ed_admin_password"
                style="@style/CustomEditTextStyle"
                android:text="@string/admin_password" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <include
            android:id="@+id/include_title_fridge_type"
            layout="@layout/layout_spash_item_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/app_shape_white_radius_9">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_select_fridge_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginStart="8dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_edit_save"
            android:layout_width="320dp"
            android:layout_height="72dp"
            android:background="@drawable/app_btn_blue_radius_5"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/app_white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="320dp"
            android:layout_height="72dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/btn_grey_radius_5"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/app_white"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>



