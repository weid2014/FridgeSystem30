<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jhteck.icebox.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_spash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#396DFF"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_screen"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_gif"
            android:layout_width="750dp"
            android:layout_height="434dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_fridges_operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="265dp"
            android:layout_height="124dp"
            android:src="@mipmap/ic_spash_logo" />

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:padding="16dp"
            app:sv_animationType="Circle"
            app:sv_doneCircleColor="@color/app_color_btn"
            app:sv_doneCircleRadius="18dp"
            app:sv_doneStepLineColor="@color/app_color_btn"
            app:sv_doneStepMarkColor="@color/app_color_btn"
            app:sv_nextStepLineColor="@color/app_color_7a7a7a"
            app:sv_nextTextColor="@color/app_color_7a7a7a"
            app:sv_selectedCircleColor="@color/app_color_btn"
            app:sv_selectedCircleRadius="18dp"
            app:sv_selectedStepNumberColor="@color/app_color_btn"
            app:sv_selectedTextColor="@color/app_black"
            app:sv_stepLineWidth="1dp"
            app:sv_stepNumberTextSize="16sp"
            app:sv_stepPadding="4dp"
            app:sv_stepViewStyle="@style/StepView" />

        <LinearLayout
            android:id="@+id/ll_step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:text="http设置 "
                        android:textColor="@color/app_black"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:text="*"
                        android:textColor="@color/colorTextRed"
                        android:textSize="22sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:background="@drawable/app_shape_white_radius_9">

                    <EditText
                        android:id="@+id/ed_http_url"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:background="@android:color/transparent"
                        android:hint="请输入"
                        android:text="@string/url_test"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:text="版本更新链接 "
                        android:textColor="@color/app_black"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:text="*"
                        android:textColor="@color/colorTextRed"
                        android:textSize="22sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:background="@drawable/app_shape_white_radius_9">

                    <EditText
                        android:id="@+id/ed_update_url"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:background="@android:color/transparent"
                        android:hint="请输入"
                        android:text="@string/update_apk_address"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="72dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_step1_next"
                    android:layout_width="300dp"
                    android:layout_height="72dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/app_shape_bottom_green_radius_5"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/app_white"
                    android:textSize="24sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="144dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="产品序列号 "
                            android:textColor="@color/app_black"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/colorTextRed"
                            android:textSize="22sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:background="@drawable/app_shape_white_radius_9">

                        <EditText
                            android:id="@+id/ed_sncode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:background="@android:color/transparent"
                            android:hint="请输入"
                            android:text="@string/sncode"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="管理员密码 "
                            android:textColor="@color/app_black"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/colorTextRed"
                            android:textSize="22sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:background="@drawable/app_shape_white_radius_9">

                        <EditText
                            android:id="@+id/ed_admin_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:background="@android:color/transparent"
                            android:hint="请输入"
                            android:text="@string/admin_password"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="设备别名 "
                            android:textColor="@color/app_black"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/colorTextRed"
                            android:textSize="22sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:background="@drawable/app_shape_white_radius_9">

                        <EditText
                            android:id="@+id/ed_device_alias"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:background="@android:color/transparent"
                            android:hint="请输入"
                            android:text="测试别名"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="设备库位 "
                            android:textColor="@color/app_black"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/colorTextRed"
                            android:textSize="22sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:background="@drawable/app_shape_white_radius_9">

                        <EditText
                            android:id="@+id/ed_location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:background="@android:color/transparent"
                            android:hint="请输入"
                            android:text="广州中心"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="是否拉取旧记录 "
                            android:textColor="@color/app_black"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="*"
                            android:textColor="@color/colorTextRed"
                            android:textSize="22sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:background="@drawable/app_shape_white_radius_9">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/sp_get_old_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="是否同步其他智能库系统账号信息 (选填)"
                            android:textColor="@color/app_black"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:background="@drawable/app_shape_white_radius_9">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/sp_sync_other_system"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:hint="不同步"
                            android:text="@string/admin_password"
                            android:textSize="16sp" />

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/ed_old_sncode"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:background="@android:color/transparent"
                            android:hint="请输入"
                            android:text="@string/sncode"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_step2_back"
                    android:layout_width="300dp"
                    android:layout_height="72dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_grey_radius_5"
                    android:gravity="center"
                    android:text="返回"
                    android:textColor="@color/app_white"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_step2_next"
                    android:layout_width="300dp"
                    android:layout_height="72dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/app_shape_bottom_green_radius_5"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/app_white"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="180dp"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="500dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:text="天线强度设置 "
                            android:textColor="@color/app_black"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_ant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="48dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:gravity="center_vertical"
                                android:text="开关锁设置 "
                                android:textColor="@color/app_black"
                                android:textSize="22sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_open_lock"
                                android:layout_width="300dp"
                                android:layout_height="72dp"
                                android:background="@drawable/app_shape_bottom_green_radius_5"
                                android:text="开锁"
                                android:textColor="@color/app_white"
                                android:textSize="24sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:gravity="center_vertical"
                                android:text="开关灯设置 "
                                android:textColor="@color/app_black"
                                android:textSize="22sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_open_lamb"
                                android:layout_width="150dp"
                                android:layout_height="72dp"
                                android:background="@drawable/app_shape_bottom_green_radius_5"
                                android:text="开灯"
                                android:textColor="@color/app_white"
                                android:textSize="24sp" />

                            <Button
                                android:id="@+id/btn_close_lamb"
                                android:layout_width="150dp"
                                android:layout_height="72dp"
                                android:layout_marginStart="12dp"
                                android:background="@drawable/btn_grey_radius_5"
                                android:text="关灯"
                                android:textColor="@color/app_white"
                                android:textSize="24sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:gravity="center_vertical"
                                android:text="NFC参数 "
                                android:textColor="@color/app_black"
                                android:textSize="22sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:background="@drawable/app_shape_white_radius_9"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_nfcId"
                                android:layout_width="300dp"
                                android:layout_height="72dp"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="48dp"
                                android:gravity="center"
                                android:textColor="@color/app_color_646464"
                                android:textSize="24sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="72dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_step3_back"
                    android:layout_width="300dp"
                    android:layout_height="72dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_grey_radius_5"
                    android:gravity="center"
                    android:text="返回"
                    android:textColor="@color/app_white"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_step3_finish"
                    android:layout_width="300dp"
                    android:layout_height="72dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/app_shape_bottom_green_radius_5"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="@color/app_white"
                    android:textSize="24sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</FrameLayout>