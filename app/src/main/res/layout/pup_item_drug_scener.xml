<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <TextView
        android:layout_marginStart="12px"
        android:id="@+id/tvDrugName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/app_color_7a7a7a"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="54dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:background="@drawable/radius_border_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Remain_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/app_shape_blue_radius_20"
            android:gravity="center"
            android:text="20%"
            android:textColor="@color/app_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_Remain_40"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/app_blue_40"
            android:gravity="center"
            android:text="40%"
            android:textColor="@color/app_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_Remain_60"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/app_blue_60"
            android:gravity="center"
            android:text="60%"
            android:textColor="@color/app_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_Remain_80"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/app_blue_80"
            android:gravity="center"
            android:text="80%"
            android:textColor="@color/app_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_Remain_100"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/app_shape_blue_radius_100"
            android:gravity="center"
            android:text="100%"
            android:textColor="@color/app_white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>